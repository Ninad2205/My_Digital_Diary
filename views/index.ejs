<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Digital Diary</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary-color: #667eea;
            --primary-dark: #5a6fd8;
            --secondary-color: #764ba2;
            --accent-color: #f093fb;
            --success-color: #4ade80;
            --warning-color: #fbbf24;
            --danger-color: #f87171;
            --text-primary: #1f2937;
            --text-secondary: #6b7280;
            --text-light: #9ca3af;
            --background: #f8fafc;
            --card-background: #ffffff;
            --border-color: #e5e7eb;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            --gradient-bg: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --border-radius: 12px;
            --border-radius-sm: 8px;
            --transition: all 0.3s ease;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: var(--text-primary);
            background: var(--background);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Combined Header with Navigation */
        .header-nav {
            background: var(--gradient-bg);
            color: white;
            padding: 1rem 0 1.5rem 0;
            box-shadow: var(--shadow-lg);
            position: relative;
            overflow: hidden;
        }

        .header-nav::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg width="40" height="40" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23ffffff" fill-opacity="0.05"><circle cx="10" cy="10" r="1.5"/><circle cx="30" cy="30" r="1.5"/><circle cx="30" cy="10" r="1"/><circle cx="10" cy="30" r="1"/></g></g></svg>');
            opacity: 0.3;
        }

        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1.5rem;
            position: relative;
        }

        /* Compact Navigation */
        .nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
            flex-wrap: wrap;
            gap: 0.8rem;
        }

        .nav-left {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .brand-logo {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 1.2rem;
            font-weight: 600;
            text-decoration: none;
            color: white;
            opacity: 0.95;
        }

        .brand-logo:hover {
            opacity: 1;
            transform: scale(1.02);
            transition: var(--transition);
        }

        .entries-count {
            color: rgba(255, 255, 255, 0.85);
            font-size: 0.85rem;
            padding: 0.4rem 0.8rem;
            background: rgba(255, 255, 255, 0.15);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.25);
            backdrop-filter: blur(10px);
            font-weight: 500;
        }

        .nav-actions {
            display: flex;
            gap: 0.8rem;
            align-items: center;
        }

        .btn {
            padding: 0.6rem 1.2rem;
            border-radius: 20px;
            text-decoration: none;
            font-weight: 500;
            font-size: 0.85rem;
            transition: var(--transition);
            border: none;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            text-align: center;
            white-space: nowrap;
        }

        .btn-primary {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
        }

        .btn-primary:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-1px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
        }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.4);
            transform: translateY(-1px);
        }

        /* Compact Title section */
        .header-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.3rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        }

        .header-subtitle {
            font-size: 1rem;
            opacity: 0.85;
            font-weight: 300;
        }

        /* Main Content */
        .main {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
            flex: 1;
        }

        .entries-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .entries-title {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--text-primary);
        }

        /* Cards Grid - 3 per row for large devices */
        .entries-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        /* Large screens: exactly 3 columns */
        @media (min-width: 1024px) {
            .entries-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }

        /* Medium screens: 2 columns */
        @media (min-width: 768px) and (max-width: 1023px) {
            .entries-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        /* Small screens: 1 column */
        @media (max-width: 767px) {
            .entries-grid {
                grid-template-columns: 1fr;
            }
        }

        .entry-card {
            background: var(--card-background);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            box-shadow: var(--shadow-md);
            transition: var(--transition);
            border: 1px solid var(--border-color);
            position: relative;
            overflow: hidden;
        }

        .entry-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--gradient-bg);
        }

        .entry-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-xl);
        }

        .entry-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
        }

        .entry-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--text-primary);
            line-height: 1.4;
            margin-bottom: 0.5rem;
            word-wrap: break-word;
        }

        .entry-date {
            color: var(--text-secondary);
            font-size: 0.85rem;
            display: flex;
            align-items: center;
            gap: 0.3rem;
        }

        .entry-status {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .status-badge {
            padding: 0.3rem 0.8rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-private {
            background: rgba(251, 191, 36, 0.1);
            color: #d97706;
        }

        .status-public {
            background: rgba(74, 222, 128, 0.1);
            color: #16a34a;
        }

        .share-link {
            color: var(--primary-color);
            text-decoration: none;
            font-size: 0.8rem;
            padding: 0.2rem 0.5rem;
            background: rgba(102, 126, 234, 0.1);
            border-radius: var(--border-radius-sm);
            transition: var(--transition);
        }

        .share-link:hover {
            background: rgba(102, 126, 234, 0.2);
        }

        .entry-actions {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            margin-top: 1rem;
        }

        .action-btn {
            padding: 0.5rem 0.8rem;
            border-radius: var(--border-radius-sm);
            font-size: 0.8rem;
            font-weight: 500;
            transition: var(--transition);
            border: none;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
        }

        .btn-view {
            background: var(--primary-color);
            color: white;
        }

        .btn-view:hover {
            background: var(--primary-dark);
        }

        .btn-edit {
            background: rgba(59, 130, 246, 0.1);
            color: #2563eb;
            border: 1px solid rgba(59, 130, 246, 0.3);
        }

        .btn-edit:hover {
            background: rgba(59, 130, 246, 0.2);
        }

        .btn-delete {
            background: rgba(248, 113, 113, 0.1);
            color: #dc2626;
            border: 1px solid rgba(248, 113, 113, 0.3);
        }

        .btn-delete:hover {
            background: rgba(248, 113, 113, 0.2);
        }

        .btn-public {
            background: rgba(74, 222, 128, 0.1);
            color: #16a34a;
            border: 1px solid rgba(74, 222, 128, 0.3);
        }

        .btn-public:hover {
            background: rgba(74, 222, 128, 0.2);
        }

        .btn-private {
            background: rgba(251, 191, 36, 0.1);
            color: #d97706;
            border: 1px solid rgba(251, 191, 36, 0.3);
        }

        .btn-private:hover {
            background: rgba(251, 191, 36, 0.2);
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            background: var(--card-background);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-sm);
            border: 2px dashed var(--border-color);
        }

        .empty-icon {
            font-size: 4rem;
            color: var(--text-light);
            margin-bottom: 1rem;
        }

        .empty-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }

        .empty-text {
            color: var(--text-secondary);
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        /* Footer */
        .footer {
            background: var(--card-background);
            border-top: 1px solid var(--border-color);
            padding: 1.5rem 1rem;
            text-align: center;
            color: var(--text-secondary);
            margin-top: auto;
            font-size: 0.9rem;
            line-height: 1.4;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .header-nav {
                padding: 0.8rem 0 1.2rem 0;
            }
            
            .header-title {
                font-size: 1.6rem;
            }
            
            .header-subtitle {
                font-size: 0.9rem;
            }
            
            .nav {
                flex-direction: column;
                align-items: stretch;
                gap: 0.8rem;
                margin-bottom: 0.8rem;
            }
            
            .nav-left {
                justify-content: center;
                flex-wrap: wrap;
                gap: 1rem;
            }
            
            .nav-actions {
                justify-content: center;
            }
            
            .entries-header {
                flex-direction: column;
                align-items: stretch;
                text-align: center;
            }
            
            .entry-actions {
                justify-content: center;
            }
            
            .main {
                padding: 1rem;
            }

            .footer {
                padding: 1rem;
                font-size: 0.8rem;
            }

            .mobile-break {
                display: inline;
            }
        }

        @media (max-width: 480px) {
            .header-nav {
                padding: 0.6rem 0 1rem 0;
            }
            
            .header-content {
                padding: 0 1rem;
            }
            
            .header-title {
                font-size: 1.4rem;
            }
            
            .header-subtitle {
                font-size: 0.85rem;
            }
            
            .brand-logo {
                font-size: 1rem;
            }
            
            .btn {
                padding: 0.5rem 1rem;
                font-size: 0.8rem;
            }
            
            .entries-count {
                font-size: 0.8rem;
                padding: 0.3rem 0.6rem;
            }
            
            .nav-left {
                flex-direction: column;
                gap: 0.5rem;
            }
            
            .entry-card {
                padding: 1rem;
            }
            
            .entry-actions {
                gap: 0.3rem;
            }
            
            .action-btn {
                padding: 0.4rem 0.6rem;
                font-size: 0.75rem;
            }

            .main {
                padding: 0.5rem;
            }

            .footer {
                padding: 0.8rem 0.5rem;
                font-size: 0.75rem;
            }

            .mobile-break {
                display: none;
            }
        }

        /* Loading Animation */
        .fade-in {
            animation: fadeIn 0.6s ease-in;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Hover Effects */
        .action-btn:active {
            transform: scale(0.95);
        }

        .btn:active {
            transform: translateY(0);
        }
    </style>
</head>
<body>
    <!-- Combined Header with Navigation -->
    <header class="header-nav">
        <div class="header-content">
            <!-- Compact Navigation -->
            <nav class="nav">
                <div class="nav-left">
                    <a href="/" class="brand-logo">
                        <i class="fas fa-book-open"></i>
                        <span>My Digital Diary</span>
                    </a>
                    <div class="entries-count">
                        <i class="fas fa-file-alt"></i>
                        <span id="entriesCount"><%= entries.length %> <%= entries.length === 1 ? 'Entry' : 'Entries' %></span>
                    </div>
                </div>
                <div class="nav-actions">
                    <a href="/entries/new" class="btn btn-primary">
                        <i class="fas fa-plus"></i>
                        New Entry
                    </a>
                    <a href="/logout" class="btn btn-secondary">
                        <i class="fas fa-sign-out-alt"></i>
                        Logout
                    </a>
                </div>
            </nav>
            
            <!-- Compact Title Section -->
            <div class="title-section">
                <p class="header-subtitle">Capture your thoughts, preserve your memories</p>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main">
        <div class="entries-header">
            <h2 class="entries-title">Your Diary Entries</h2>
        </div>

        <% if (entries.length === 0) { %>
            <div class="empty-state fade-in">
                <div class="empty-icon">
                    <i class="fas fa-feather-alt"></i>
                </div>
                <h3 class="empty-title">No entries yet</h3>
                <p class="empty-text">
                    Your diary is waiting for your first story.<br>
                    Start writing and capture your thoughts and memories.
                </p>
                <a href="/entries/new" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Write Your First Entry
                </a>
            </div>
        <% } else { %>
            <div class="entries-grid">
                <% entries.forEach((entry, index) => { %>
                    <article class="entry-card fade-in" style="animation-delay: <%= index * 0.1 %>s">
                        <div class="entry-header">
                            <div>
                                <h3 class="entry-title"><%= entry.title %></h3>
                                <div class="entry-date">
                                    <i class="fas fa-calendar-alt"></i>
                                    <%= entry.createdAt.toLocaleDateString('en-US', { 
                                        year: 'numeric', 
                                        month: 'short', 
                                        day: 'numeric',
                                        hour: '2-digit',
                                        minute: '2-digit'
                                    }) %>
                                </div>
                            </div>
                        </div>

                        <div class="entry-status">
                            <% if (entry.isPublic) { %>
                                <span class="status-badge status-public">
                                    <i class="fas fa-globe"></i>
                                    Public
                                </span>
                                <a href="/share/<%= entry.shareId %>" target="_blank" class="share-link">
                                    <i class="fas fa-external-link-alt"></i>
                                    View Public Link
                                </a>
                            <% } else { %>
                                <span class="status-badge status-private">
                                    <i class="fas fa-lock"></i>
                                    Private
                                </span>
                            <% } %>
                        </div>

                        <div class="entry-actions">
                            <a href="/entries/<%= entry._id %>" class="action-btn btn-view">
                                <i class="fas fa-eye"></i>
                                View
                            </a>
                            
                            <a href="/entries/<%= entry._id %>/edit" class="action-btn btn-edit">
                                <i class="fas fa-edit"></i>
                                Edit
                            </a>

                            <% if (!entry.isPublic) { %>
                                <form action="/entries/<%= entry._id %>/set-public" method="POST" style="display: inline">
                                    <button type="submit" class="action-btn btn-public">
                                        <i class="fas fa-share-alt"></i>
                                        Make Public
                                    </button>
                                </form>
                            <% } else { %>
                                <form action="/entries/<%= entry._id %>/set-private" method="POST" style="display: inline">
                                    <button type="submit" class="action-btn btn-private">
                                        <i class="fas fa-eye-slash"></i>
                                        Make Private
                                    </button>
                                </form>
                            <% } %>

                            <form action="/entries/<%= entry._id %>/delete" method="POST" style="display: inline">
                                <button type="submit" class="action-btn btn-delete" 
                                        onclick="return confirm('Are you sure you want to delete &quot;<%= entry.title %>&quot;? This action cannot be undone.')">
                                    <i class="fas fa-trash-alt"></i>
                                    Delete
                                </button>
                            </form>
                        </div>
                    </article>
                <% }) %>
            </div>
        <% } %>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2024 My Digital Diary.<br class="mobile-break">Your story matters.</p>
    </footer>

    <script>
        // Add smooth scroll behavior
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        // Add loading states for forms
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function() {
                const button = this.querySelector('button[type="submit"]');
                if (button) {
                    button.disabled = true;
                    button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Loading...';
                }
            });
        });

        // Add keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey && e.key === 'n') {
                e.preventDefault();
                window.location.href = '/entries/new';
            }
        });

        // Animate cards on scroll
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.entry-card').forEach(card => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            observer.observe(card);
        });
    </script>
</body>
</html>