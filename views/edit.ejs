<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Entry - My Digital Diary</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary-color: #667eea;
            --primary-dark: #5a6fd8;
            --secondary-color: #764ba2;
            --accent-color: #f093fb;
            --success-color: #4ade80;
            --warning-color: #fbbf24;
            --danger-color: #f87171;
            --text-primary: #1f2937;
            --text-secondary: #6b7280;
            --text-light: #9ca3af;
            --background: #f8fafc;
            --card-background: #ffffff;
            --border-color: #e5e7eb;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            --gradient-bg: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --border-radius: 12px;
            --border-radius-sm: 8px;
            --transition: all 0.3s ease;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: var(--text-primary);
            background: var(--background);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Combined Header with Navigation */
        .header-nav {
            background: var(--gradient-bg);
            color: white;
            padding: 1rem 0 1.5rem 0;
            box-shadow: var(--shadow-lg);
            position: relative;
            overflow: hidden;
        }

        .header-nav::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg width="40" height="40" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23ffffff" fill-opacity="0.05"><circle cx="10" cy="10" r="1.5"/><circle cx="30" cy="30" r="1.5"/><circle cx="30" cy="10" r="1"/><circle cx="10" cy="30" r="1"/></g></g></svg>');
            opacity: 0.3;
        }

        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1.5rem;
            position: relative;
        }

        /* Compact Navigation */
        .nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
            flex-wrap: wrap;
            gap: 0.8rem;
        }

        .nav-left {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .brand-logo {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 1.2rem;
            font-weight: 600;
            text-decoration: none;
            color: white;
            opacity: 0.95;
        }

        .brand-logo:hover {
            opacity: 1;
            transform: scale(1.02);
            transition: var(--transition);
        }

        .nav-breadcrumb {
            color: rgba(255, 255, 255, 0.85);
            font-size: 0.85rem;
            padding: 0.4rem 0.8rem;
            background: rgba(255, 255, 255, 0.15);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.25);
            backdrop-filter: blur(10px);
            font-weight: 500;
        }

        .nav-actions {
            display: flex;
            gap: 0.8rem;
            align-items: center;
        }

        .btn {
            padding: 0.6rem 1.2rem;
            border-radius: 20px;
            text-decoration: none;
            font-weight: 500;
            font-size: 0.85rem;
            transition: var(--transition);
            border: none;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            text-align: center;
            white-space: nowrap;
        }

        .btn-primary {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
        }

        .btn-primary:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-1px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
        }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.4);
            transform: translateY(-1px);
        }

        /* Compact Title section */
        .header-subtitle {
            font-size: 1rem;
            opacity: 0.85;
            font-weight: 300;
        }

        /* Main Content */
        .main {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
            flex: 1;
        }

        .page-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .page-title {
            font-size: 2rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }

        .page-subtitle {
            color: var(--text-secondary);
            font-size: 1rem;
        }

        /* Form Styling */
        .entry-form {
            background: var(--card-background);
            padding: 2rem;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-md);
            border: 1px solid var(--border-color);
            margin-bottom: 2rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .form-input {
            width: 100%;
            padding: 0.875rem 1rem;
            border: 2px solid var(--border-color);
            border-radius: var(--border-radius-sm);
            font-size: 1rem;
            transition: var(--transition);
            background: var(--card-background);
            font-family: inherit;
        }

        .form-input:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .form-textarea {
            min-height: 200px;
            resize: vertical;
        }

        .char-counter {
            font-size: 0.8rem;
            color: var(--text-light);
            text-align: right;
            margin-top: 0.25rem;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
            margin-top: 2rem;
            flex-wrap: wrap;
        }

        .btn-submit {
            background: var(--gradient-bg);
            color: white;
            padding: 0.875rem 2rem;
            border: none;
            border-radius: var(--border-radius-sm);
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: var(--transition);
            box-shadow: var(--shadow-md);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
        }

        .btn-submit:active {
            transform: translateY(0);
        }

        .btn-cancel {
            background: var(--card-background);
            color: var(--text-secondary);
            padding: 0.875rem 1.5rem;
            border: 2px solid var(--border-color);
            border-radius: var(--border-radius-sm);
            font-weight: 500;
            font-size: 1rem;
            cursor: pointer;
            transition: var(--transition);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-cancel:hover {
            background: var(--background);
            border-color: var(--text-secondary);
            color: var(--text-primary);
        }

        /* Info Alert */
        .info-alert {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
            border: 1px solid rgba(102, 126, 234, 0.2);
            border-radius: var(--border-radius-sm);
            padding: 1rem 1.2rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.8rem;
            color: var(--primary-color);
            font-size: 0.9rem;
        }

        .info-alert i {
            font-size: 1.1rem;
            opacity: 0.8;
        }

        /* Footer */
        .footer {
            background: var(--card-background);
            border-top: 1px solid var(--border-color);
            padding: 1.5rem 1rem;
            text-align: center;
            color: var(--text-secondary);
            margin-top: auto;
            font-size: 0.9rem;
            line-height: 1.4;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .header-nav {
                padding: 0.8rem 0 1.2rem 0;
            }
            
            .nav {
                flex-direction: column;
                align-items: stretch;
                gap: 0.8rem;
                margin-bottom: 0.8rem;
            }
            
            .nav-left {
                justify-content: center;
                flex-wrap: wrap;
                gap: 1rem;
            }
            
            .nav-actions {
                justify-content: center;
            }
            
            .main {
                padding: 1rem;
            }

            .entry-form {
                padding: 1.5rem;
            }

            .form-actions {
                justify-content: stretch;
                flex-direction: column;
            }

            .btn-submit, .btn-cancel {
                justify-content: center;
            }

            .footer {
                padding: 1rem;
                font-size: 0.8rem;
            }

            .mobile-break {
                display: inline;
            }
        }

        @media (max-width: 480px) {
            .header-nav {
                padding: 0.6rem 0 1rem 0;
            }
            
            .header-content {
                padding: 0 1rem;
            }
            
            .brand-logo {
                font-size: 1rem;
            }
            
            .btn {
                padding: 0.5rem 1rem;
                font-size: 0.8rem;
            }
            
            .nav-breadcrumb {
                font-size: 0.8rem;
                padding: 0.3rem 0.6rem;
            }
            
            .nav-left {
                flex-direction: column;
                gap: 0.5rem;
            }

            .main {
                padding: 0.5rem;
            }

            .entry-form {
                padding: 1rem;
            }

            .page-title {
                font-size: 1.5rem;
            }

            .footer {
                padding: 0.8rem 0.5rem;
                font-size: 0.75rem;
            }

            .mobile-break {
                display: none;
            }
        }

        /* Loading Animation */
        .fade-in {
            animation: fadeIn 0.6s ease-in;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Form validation styles */
        .form-input.error {
            border-color: var(--danger-color);
            box-shadow: 0 0 0 3px rgba(248, 113, 113, 0.1);
        }

        .error-message {
            color: var(--danger-color);
            font-size: 0.8rem;
            margin-top: 0.25rem;
        }
    </style>
</head>
<body>
    <!-- Combined Header with Navigation -->
    <header class="header-nav">
        <div class="header-content">
            <!-- Compact Navigation -->
            <nav class="nav">
                <div class="nav-left">
                    <a href="/index" class="brand-logo">
                        <i class="fas fa-book-open"></i>
                        <span>My Digital Diary</span>
                    </a>
                    <div class="nav-breadcrumb">
                        <i class="fas fa-edit"></i>
                        <span>Edit Entry</span>
                    </div>
                </div>
                <div class="nav-actions">
                    <a href="/index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i>
                        Back to Entries
                    </a>
                    <a href="/logout" class="btn btn-secondary">
                        <i class="fas fa-sign-out-alt"></i>
                        Logout
                    </a>
                </div>
            </nav>
            
            <!-- Compact Title Section -->
            <div class="title-section">
                <p class="header-subtitle">Update your thoughts and memories</p>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main">
        <div class="page-header fade-in">
            <p class="page-subtitle">Refine your thoughts and make your story shine</p>
        </div>

        <!-- Info Alert -->
        <div class="info-alert fade-in">
            <i class="fas fa-info-circle"></i>
            <span>You're editing an existing entry. Your changes will be saved automatically.</span>
        </div>

        <!-- Entry Form -->
        <form class="entry-form fade-in" action="/entries/<%= entry._id %>/edit" method="POST">
            <div class="form-group">
                <label for="title" class="form-label">
                    Entry Title
                </label>
                <input
                    type="text"
                    id="title"
                    name="title"
                    class="form-input"
                    value="<%= entry.title %>"
                    placeholder="Enter your title..."
                    maxlength="100"
                    required
                />
                <div class="char-counter">
                    <span id="titleCounter"><%= entry.title.length %></span>/100 characters
                </div>
            </div>

            <div class="form-group">
                <label for="content" class="form-label">
                    <i class="fas fa-pen"></i>
                    Your Thoughts
                </label>
                <textarea
                    id="content"
                    name="content"
                    class="form-input form-textarea"
                    placeholder="Share your thoughts..."
                    maxlength="5000"
                    required
                ><%= entry.content %></textarea>
                <div class="char-counter">
                    <span id="contentCounter"><%= entry.content.length %></span>/5000 characters
                </div>
            </div>

            <div class="form-actions">
                <a href="/index" class="btn-cancel">
                    <i class="fas fa-times"></i>
                    Cancel
                </a>
                <button type="submit" class="btn-submit">
                    <i class="fas fa-save"></i>
                    Update Entry
                </button>
            </div>
        </form>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2024 My Digital Diary.<br class="mobile-break">Your story matters.</p>
    </footer>

    <script>
        // Character counters
        const titleInput = document.getElementById('title');
        const contentTextarea = document.getElementById('content');
        const titleCounter = document.getElementById('titleCounter');
        const contentCounter = document.getElementById('contentCounter');

        titleInput.addEventListener('input', function() {
            titleCounter.textContent = this.value.length;
        });

        contentTextarea.addEventListener('input', function() {
            contentCounter.textContent = this.value.length;
        });

        // Auto-resize textarea
        contentTextarea.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = Math.min(this.scrollHeight, 400) + 'px';
        });

        // Set initial textarea height
        window.addEventListener('load', function() {
            contentTextarea.style.height = 'auto';
            contentTextarea.style.height = Math.min(contentTextarea.scrollHeight, 400) + 'px';
        });

        // Form validation
        const form = document.querySelector('.entry-form');
        form.addEventListener('submit', function(e) {
            let isValid = true;
            
            // Clear previous errors
            document.querySelectorAll('.error-message').forEach(el => el.remove());
            document.querySelectorAll('.form-input.error').forEach(el => el.classList.remove('error'));

            // Validate title
            if (titleInput.value.trim().length < 3) {
                showError(titleInput, 'Title must be at least 3 characters long');
                isValid = false;
            }

            // Validate content
            if (contentTextarea.value.trim().length < 10) {
                showError(contentTextarea, 'Content must be at least 10 characters long');
                isValid = false;
            }

            if (!isValid) {
                e.preventDefault();
            }
        });

        function showError(input, message) {
            input.classList.add('error');
            const errorDiv = document.createElement('div');
            errorDiv.className = 'error-message';
            errorDiv.textContent = message;
            input.parentNode.appendChild(errorDiv);
        }

        // Loading state for form submission
        form.addEventListener('submit', function() {
            const submitBtn = document.querySelector('.btn-submit');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Updating...';
            submitBtn.disabled = true;
        });

        // Keyboard shortcut (Ctrl+Enter to submit)
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey && e.key === 'Enter') {
                form.submit();
            }
        });

        // Track changes for unsaved warning
        let hasUnsavedChanges = false;
        const originalTitle = titleInput.value;
        const originalContent = contentTextarea.value;

        [titleInput, contentTextarea].forEach(input => {
            input.addEventListener('input', function() {
                hasUnsavedChanges = (titleInput.value !== originalTitle || contentTextarea.value !== originalContent);
            });
        });

        // Warn before leaving with unsaved changes
        window.addEventListener('beforeunload', function(e) {
            if (hasUnsavedChanges) {
                e.preventDefault();
                e.returnValue = '';
            }
        });

        // Don't warn when form is submitted
        form.addEventListener('submit', function() {
            hasUnsavedChanges = false;
        });
    </script>
</body>
</html>